<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="447dp"
            android:layout_height="171dp" app:srcCompat="@drawable/bottom" android:id="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.705"/>
    <ImageView
            android:layout_width="423dp"
            android:layout_height="174dp" app:srcCompat="@drawable/top" android:id="@+id/imageView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="3dp"
            tools:ignore="MissingConstraints" app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

    <ImageView
            android:layout_width="329dp"
            android:layout_height="292dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView9"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Study Buddy"
            android:layout_width="383dp"
            android:layout_height="83dp" android:id="@+id/textView"
            android:textSize="50sp"
            android:gravity="center_horizontal|center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/imageView5"
            android:textColor="#0000FF"
            app:layout_constraintTop_toTopOf="parent" android:fontFamily="@font/a"
            app:layout_constraintVertical_bias="0.49" app:layout_constraintHorizontal_bias="0.428"/>
    <TextView
            android:id="@+id/createAccountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Create an Account"
            style="@style/UnderlinedTextView"
            android:clickable="true" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/loginButtonAdmin" android:minHeight="48dp"
            android:paddingTop="20dp"/>
    <EditText
            android:layout_width="300dp"
            android:paddingTop="5dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:hint="Username"
            android:textColorHint="#808080"
            android:gravity="center"
            android:ems="15"
            android:id="@+id/editTextTextPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            android:background="@drawable/edit_text_rounded" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword" android:layout_marginTop="8dp"/>
    <EditText
            android:hint="Password"
            android:textColorHint="#808080"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:inputType="textPassword"
            android:ems="15"
            android:id="@+id/editTextTextPassword"
            android:minHeight="48dp"
            android:background="@drawable/edit_text_rounded"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/loginButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" android:layout_marginEnd="55dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Login as User"
            android:layout_width="300dp"
            android:layout_height="40dp" android:id="@+id/loginButton"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"
            android:backgroundTint="#0000FF"
            android:textStyle="bold" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="56dp"
            android:layout_marginEnd="55dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@+id/loginButtonAdmin"/>
    <Button
            android:text="Login as adminstrator"
            android:layout_width="300dp"
            android:layout_height="40dp" android:id="@+id/loginButtonAdmin"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"
            android:backgroundTint="#0000FF"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/loginButton"

            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/createAccountTextView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="56dp"
            android:layout_marginEnd="55dp" app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>

